<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#008080"
    tools:context="com.example.nikh.firebaseauth.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="2dp">

        <TextView
            android:id="@+id/textViewRobotFilmmaker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="@font/archivo_black"
            android:text="Robot Filmmaker"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="	#FFBF00"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:typeface="normal" />

        <ImageView
            android:id="@+id/imageViewRobotfilmmaker"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="16dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            app:srcCompat="@drawable/icon_360" />


        <TextView
            android:id="@+id/textViewUserRegistration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="User Registration"
            android:textColor="#77DD77"
            android:textStyle="normal"
            android:fontFamily="@font/acme"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:layout_margin="8dp"
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:text="Enter your email" />

        <EditText
            android:layout_margin="8dp"
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your Password"
            android:inputType="textPassword"
            android:text="Enter your password" />


        <Button
            android:id="@+id/buttonRegister"
            style="@android:style/Widget.DeviceDefault.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="Register"
            android:fontFamily="@font/aclonica"
            android:textAlignment="center"
            android:textColor="#3D2B1F"
            android:textSize="18dp"
            android:textStyle="bold"
            android:background="@drawable/mybutton" />

        <TextView
            android:id="@+id/TextViewSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:textAlignment="center"
            android:textColor="#77DD77"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="Already Registered Sign In Here" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
